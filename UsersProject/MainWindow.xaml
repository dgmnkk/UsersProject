<Window x:Class="UsersProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <UniformGrid Columns="3" >
            <Button Click="LoadData_Button">Load users</Button>
            <Button Click="LoadAdmins_Button">Load admins</Button>
            <Button Click="Update_Button" >Update changes</Button>
        </UniformGrid>
        <DataGrid Grid.Column="0" x:Name="usersList"  HorizontalContentAlignment="Stretch" DisplayMemberPath="ShortInfo" ></DataGrid>
    </StackPanel>
</Window>
